<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bck_medical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="160dp"
            android:src="@drawable/LogoClinicapng" />

        <EditText
            android:id="@+id/username_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/rounded_corner"
            android:hint="Nombre de Usuario"
            android:inputType="textEmailAddress"
            android:padding="18dp"
            android:textColor="#3E4849"
            android:textColorHint="#065A52"
            android:textSize="20sp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Contraseña"
            android:textColor="#065A52"
            android:textColorHint="#065A52"
            android:textSize="20sp"
            android:background="@drawable/rounded_corner"
            android:padding="18dp"
            android:inputType="textPassword"
            android:id="@+id/password_input"/>
        
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar Session"
            android:backgroundTint="#29554F"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:padding="18dp"
            android:layout_marginTop="20sp"
            android:id="@+id/login_btn"/>

        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="handleClick"
            android:orientation="horizontal"
            android:text="REGISTRATE"
            android:textColor="#29554F"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="160sp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="handleClick"
            android:text="Olvidaste tu contraseña?"
            android:textColor="#FF29554F"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center"


        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


