<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bck_medical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="300dp"
            android:layout_height="160dp"
            android:src="@drawable/LogoClinicapng" />

        <EditText
            android:id="@+id/name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corner"
            android:hint="Nombre"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="#065A52"
            android:textColorHint="#065A52"
            android:textSize="18sp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Apellido"
            android:textColor="#065A52"
            android:textColorHint="#065A52"
            android:textSize="18sp"
            android:background="@drawable/rounded_corner"
            android:padding="10dp"
            android:inputType="text"
            android:id="@+id/lastname_input"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="DNI"
            android:textColor="#065A52"
            android:textColorHint="#065A52"
            android:textSize="18sp"
            android:background="@drawable/rounded_corner"
            android:padding="10dp"
            android:inputType="number"
            android:id="@+id/dni_input"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Email"
            android:textColor="#065A52"
            android:textColorHint="#065A52"
            android:textSize="18sp"
            android:background="@drawable/rounded_corner"
            android:padding="10dp"
            android:inputType="textEmailAddress"
            android:id="@+id/email_input"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Telefono"
            android:textColor="#065A52"
            android:textColorHint="#065A52"
            android:textSize="18sp"
            android:background="@drawable/rounded_corner"
            android:padding="10dp"
            android:inputType="number"
            android:id="@+id/phone_input"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Contraseña"
            android:textColor="#065A52"
            android:textColorHint="#065A52"
            android:textSize="18sp"
            android:background="@drawable/rounded_corner"
            android:padding="10dp"
            android:inputType="textPassword"
            android:id="@+id/password_input"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Repetir Contraseña"
            android:textColor="#065A52"
            android:textColorHint="#065A52"
            android:textSize="18sp"
            android:background="@drawable/rounded_corner"
            android:padding="10dp"
            android:inputType="textPassword"
            android:id="@+id/repeatpassword_input"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/login_btn"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="20sp"
                android:backgroundTint="#FF313F59"
                android:padding="10dp"
                android:text="Iniciar Session"
                android:textColor="#FFFFFF"
                android:textSize="17sp" />


            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="20sp"
                android:backgroundTint="#FF313F59"
                android:padding="10dp"
                android:text="Cancelar"
                android:textColor="#FFFFFF"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>